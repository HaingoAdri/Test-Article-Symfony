{% extends 'base.html.twig' %}

{% block title %}Categorie liste{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="breadcrumbs mb-4"> <a href="#">Categorie</a>
            <span class="mx-1">/</span>  <a href="{{ path('app_categorie_index') }}">Liste</a>
        </div>
    </div>
    <div class="col-12">
        <h1>Categorie list</h1>
        <div class="card border-success mb-3">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <th>actions</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.nom }}</td>
                            {% if is_granted('ROLE_ADMIN') %}
                            <td>
                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-outline-dark">Show</a>
                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-outline-success">edit</a>
                            </td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_categorie_new') }}" class="btn btn-outline-success">Create new</a>
{% endif %}
{% endblock %}
