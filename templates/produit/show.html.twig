{% extends 'base.html.twig' %}

{% block title %}Produit {{ produit.id }} details{% endblock %}

{% block body %}
    <h1>Produit details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ produit.date ? produit.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('upload_image/' ~ produit.image) }}" alt="{{ produit.nom }}" style="max-height: 200px; object-fit: cover;"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.labelle }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            
            <tr>
                <th>Unite price</th>
                <td>{{ produit.prixUnitaire }} Ar</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}" class="btn btn-outline-dark">Back to list</a>
    {% if app.user and produit.users and app.user.id == produit.users.id %}
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-outline-success">Edit</a>
    
    <p></p>
    {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
