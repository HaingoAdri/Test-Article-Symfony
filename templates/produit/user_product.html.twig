{% extends 'base.html.twig' %}

{% block title %}My produit list{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="breadcrumbs mb-4"> <a href="#">Product</a>
            <span class="mx-1">/</span>  <a href="{{ path('app_produit_index') }}">List</a>
        </div>
    </div>
    <div class="col-12">
        <h1>Your product list</h1>
        <div class="card border-success mb-3">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Quantite</th>
                            <th>Date</th>
                            <th>Prix_unitaire</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.quantite }}</td>
                            <td>{{ produit.date ? produit.date|date('Y-m-d') : '' }}</td>
                            <td>{{ produit.prixUnitaire }}</td>
                            <td>
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-dark">Show</a>
                                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-outline-success">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    <a href="{{ path('app_produit_new') }}" class="btn btn-outline-success">Create new</a>
{% endblock %}
